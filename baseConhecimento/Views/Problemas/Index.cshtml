                    <p class="nome"> @problema.nome </p>
                    @*Html.ActionLink(itens.nome, "Details", new { id = itens.id_ic })*@
                </div>
                @*Html.ActionLink("Detalhes", "Details", new { id = itens.id_ic }) |*@
