@model IEnumerable<baseConhecimento.Models.problema>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nossos Problemas</h2>

<p>
    @Html.ActionLink("Novo problema", "Create")
</p>


